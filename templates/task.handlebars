{{#if task.completed}}
  <div id="{{task._id}}" class="item item_task complete">
{{else}}
  <div id="{{task._id}}" class="item item_task">
{{/if}}


  <div class="ui grid middle aligned">
    <div class="column center aligned no-margin two wide">
      {{!-- Checkbox Icon --}}
      {{#if task.completed}}
        <i class="icon large empty checkbox checked" task={{task._id}}></i>
      {{else}}
        <i class="icon large empty checkbox" task={{task._id}}></i>
      {{/if}}
    </div>

    <div class="column left aligned no-margin seven wide">
      <div class="task-info">
        <span class="task-title">{{task.title}}</span><br>
        <span class="task-deadline">{{task.deadlineString}}</span>
      </div>
    </div>

    <div class="column right aligned no-margin seven wide">
      {{#if task.notes}}
        <i class="icon square text file outline popup-button edit-notes black inverted column two wide no-margin" data-html='{{saveNotes task}}'></i>
      {{else}}
        <i class="icon square text file outline popup-button edit-notes column two wide no-margin" data-html='{{saveNotes task}}'></i>
      {{/if}}

      {{#if task.deadline}}
        <i class="icon square calendar popup-button edit-deadline black inverted column two wide no-margin" data-html="{{saveDeadline task}}"></i>
      {{else}}
        <i class="icon square calendar popup-button edit-deadline column two wide no-margin" data-html="{{saveDeadline task}}"></i>
      {{/if}}

      <i class="icon square ui dropdown edit-priority pointing column two wide no-margin" task={{task._id}} priority={{task.priority}}>
        <div class="menu ui transition hidden">
          <div class="item" data-value="1">
            <i class="icon up menu-icon"></i>
          </div>
          <div class="item" data-value="0">
            <i class="icon circle blank menu-icon"></i>
          </div>
          <div class="item" data-value="-1">
            <i class="icon down menu-icon"></i>
          </div>
        </div>
      </i>
      <i class="icon square remove delete-task column one wide no-margin" task={{task._id}}>
      </i>
    </div>
  </div>
</div>